#include "Secrets.xcconfig"

// -----------------------------------------------------------------------------
// Build Settings
// -----------------------------------------------------------------------------
SWIFT_OPTIMIZATION_LEVEL = -O
SWIFT_COMPILATION_MODE = wholemodule
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
ENABLE_TESTABILITY = NO
VALIDATE_PRODUCT = YES

// Strip debug symbols
STRIP_INSTALLED_PRODUCT = YES
STRIP_STYLE = all
COPY_PHASE_STRIP = YES

// Disable assertions in release
SWIFT_ACTIVE_COMPILATION_CONDITIONS = RELEASE $(inherited)
ENABLE_NS_ASSERTIONS = NO

// -----------------------------------------------------------------------------
// Code Signing (Release)
// -----------------------------------------------------------------------------
CODE_SIGN_IDENTITY = Apple Distribution
CODE_SIGN_STYLE = Automatic

// -----------------------------------------------------------------------------
// Bitcode (deprecated but keeping for reference)
// -----------------------------------------------------------------------------
ENABLE_BITCODE = NO

// -----------------------------------------------------------------------------
// Asset Catalog
// -----------------------------------------------------------------------------
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_OPTIMIZATION = time

// -----------------------------------------------------------------------------
// Derived Values
// -----------------------------------------------------------------------------
PRODUCT_BUNDLE_IDENTIFIER = $(BUNDLE_ID_PREFIX).lifewrapped
PRODUCT_NAME = Life Wrapped

// Widget Bundle ID
WIDGET_BUNDLE_IDENTIFIER = $(BUNDLE_ID_PREFIX).lifewrapped.widgets

// Watch App Bundle ID
WATCH_BUNDLE_IDENTIFIER = $(BUNDLE_ID_PREFIX).lifewrapped.watch
