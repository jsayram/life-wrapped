#include "Secrets.xcconfig"

// -----------------------------------------------------------------------------
// Build Settings
// -----------------------------------------------------------------------------
SWIFT_OPTIMIZATION_LEVEL = -Onone
SWIFT_COMPILATION_MODE = singlefile
DEBUG_INFORMATION_FORMAT = dwarf
ENABLE_TESTABILITY = YES
GCC_PREPROCESSOR_DEFINITIONS = DEBUG=1 $(inherited)
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG $(inherited)

// -----------------------------------------------------------------------------
// Code Signing (Debug)
// -----------------------------------------------------------------------------
CODE_SIGN_IDENTITY = Apple Development
CODE_SIGN_STYLE = Automatic

// -----------------------------------------------------------------------------
// Asset Catalog
// -----------------------------------------------------------------------------
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon

// -----------------------------------------------------------------------------
// Privacy Settings
// -----------------------------------------------------------------------------
// In debug, we might want to see more logs
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG VERBOSE_LOGGING $(inherited)

// -----------------------------------------------------------------------------
// Derived Values
// -----------------------------------------------------------------------------
PRODUCT_BUNDLE_IDENTIFIER = $(BUNDLE_ID_PREFIX).lifewrapped
PRODUCT_NAME = Life Wrapped

// Widget Bundle ID
WIDGET_BUNDLE_IDENTIFIER = $(BUNDLE_ID_PREFIX).lifewrapped.widgets

// Watch App Bundle ID
WATCH_BUNDLE_IDENTIFIER = $(BUNDLE_ID_PREFIX).lifewrapped.watch
